/dts-v1/;
#include "sama5d4.dtsi"

/ {
	model = "Atmel SAMA5D4 DevelBoard SoC";
	compatible = "atmel,sama5d4-develboard", "atmel,sama5d4", "atmel,sama5";

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	memory {
		reg = <0x20000000 0x20000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};

		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};
	};

	ahb {
		apb {
			macb0: ethernet@f8020000 {
				phy-mode = "rmii";
				status = "okay";

				phy0: ethernet-phy@1 {
					interrupt-parent = <&pioE>;
					interrupts = <1 IRQ_TYPE_EDGE_FALLING>;
					reg = <1>;
				};
			};

			mmc1: mmc@fc000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc1_clk_cmd_dat0 &pinctrl_mmc1_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

			i2c0: i2c@f8014000 {
				status = "okay";

				/**
				 * AT24MAC402 Standard 2-Kbit EEPROM
				 * First half address range: 0x00-0x7F
				 * Second half address range: 0x80-0xFF
				 */
				24c02@50 {
					compatible = "24c02";
					reg = <0x50>;
					pagesize = <16>;
					read-only;
				};

				/**
				 * AT24MAC402 Extended Memory
				 * 128-bit Serial Number: 0x80-0x8F (16 bytes)
				 * EUI-48 Value: 0x9A-0x9F (6 bytes)
				 * EUI-64 Value: 0x98-0x9F (8 bytes)
				 */
				24c02@58 {
					compatible = "24c02";
					reg = <0x58>;
					pagesize = <1>;
					read-only;
				};
			};

			adc0: adc@fc034000 {
				atmel,adc-vref = <3300>;
				status = "okay";
			};

			usart2: serial@fc008000 {
				status = "okay";
			};

			usart3: serial@fc00c000 {
				status = "okay";
			};

			usart4: serial@fc010000 {
				status = "okay";
			};

			watchdog@fc068640 {
				status = "okay";
			};

			pinctrl@fc06a000 {
				mmc0 {
					pinctrl_mmc0_clk_cmd_dat: mmc0_clk_cmd_dat {
						atmel,pins = <
							AT91_PIOC 4 AT91_PERIPH_B AT91_PINCTRL_NONE     /* MCI0_CK */
							AT91_PIOE 0 AT91_PERIPH_B AT91_PINCTRL_PULL_UP  /* MCI0_CDB */
							AT91_PIOE 1 AT91_PERIPH_B AT91_PINCTRL_PULL_UP  /* MCI0_DB0 */
							AT91_PIOE 2 AT91_PERIPH_B AT91_PINCTRL_PULL_UP  /* MCI0_DB1 */
							AT91_PIOE 3 AT91_PERIPH_B AT91_PINCTRL_PULL_UP  /* MCI0_DB2 */
							AT91_PIOE 4 AT91_PERIPH_B AT91_PINCTRL_PULL_UP  /* MCI0_DB3 */
						>;
					};
				};
				usb1 {
					pinctrl_usb1_ovcur: usb1_ovcur {
						atmel,pins = <
							AT91_PIOE 12 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP /* USB_OVCUR */
						>;
					};
				};
			};
		};

		nand0: nand@80000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			nand-on-flash-bbt;
			atmel,has-pmecc;
			status = "okay";

			at91bootstrap@0 {
				label = "at91bootstrap";
				reg = <0x0 0x40000>;
			};

			bootloader@40000 {
				label = "bootloader";
				reg = <0x40000 0x80000>;
			};

			bootloaderenv@c0000 {
				label = "bootloader env";
				reg = <0xc0000 0xc0000>;
			};

			dtb@180000 {
				label = "device tree";
				reg = <0x180000 0x80000>;
			};

			kernel@200000 {
				label = "kernel";
				reg = <0x200000 0x600000>;
			};

			rootfs@800000 {
				label = "rootfs";
				reg = <0x800000 0x0f800000>;
			};
		};

		usb0: gadget@00400000 {
			status = "okay";
		};

		usb1: ohci@00500000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_usb1_ovcur>;
			num-ports = <3>;
			atmel,vbus-gpio = <0
				&pioE 11 GPIO_ACTIVE_HIGH
				&pioE 14 GPIO_ACTIVE_HIGH
			>;
			atmel,oc-gpio = <&pioE 12 GPIO_ACTIVE_LOW>;
			status = "okay";
		};

		usb2: ehci@00600000 {
			status = "okay";
		};
	};

	leds {
		compatible = "gpio-leds";
		status = "okay";

		d10 {
			label = "d10";
			gpios = <&pioB 31 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
		};
	};
};
